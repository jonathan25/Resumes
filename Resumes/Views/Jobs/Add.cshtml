@model Resumes.Models.Job
@{
    Layout = "";
    Model.Date = DateTime.Today;
}
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1"><span class="glyphicon glyphicon-plus"></span> Add a new job</a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body">
                @using (Html.BeginForm("Add", "Jobs", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.PersonId)
                        <div class="form-group">
                            <div class="form-inline">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Title" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control input-sm", value = "yyyy-mm-dd" })
                                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", rows = "10", style = "min-width: 100%", placeholder = "Description with Markdown format" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-default btn-primary" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

